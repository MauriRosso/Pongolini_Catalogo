<pages:PopupPage xmlns:pages="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup"
                 xmlns="http://xamarin.com/schemas/2014/forms"
                 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                 x:Class="Pongolini_Catalogo.PopupModalSERIE6000">
    <ContentPage.Content>
        <StackLayout 
                 BackgroundColor="White"
                 HorizontalOptions="Center"
                 VerticalOptions="Center">
            <Label x:Name="lblPopUp" Text="La línea 6000 es la solución ideal para el reparador de cabezas de cilindros con problemas de sobremedidas. Están construidos en aceros de altas aleaciones de cromo, niquel y molibdeno. Tratamientos térmicos que obtienen una dureza final de 38-44 HRC."
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" 
                   TextColor="DarkBlue" FontSize="20" Margin="15,15,15,15" HorizontalTextAlignment="Center"/>
            <Button x:Name="btnOK" 
                BackgroundColor="DarkBlue"
                FontSize="20"
                Text="OK"
                TextColor="White"
                FontAttributes="Bold"
                Margin="15,0,15,15"
                Clicked="btnOK_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</pages:PopupPage>