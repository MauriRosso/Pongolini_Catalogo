<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pongolini_Catalogo.MasterDetail.NuevosDesarrollos"
             Title="Nuevos Desarrollos">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label
                    x:Name="lblTipoProductoNuevDes"
                    Text="Tipo producto"  
                    Margin="13,10"
                />
                <Picker 
                    x:Name="pckTipoProductoNuevDes"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="Start"
                    Margin="8,0"
                    Title="Seleccione producto"
                    
                />
            </StackLayout>
            <Button x:Name="btnBuscarNuevDes"
                    Text="BUSCAR"
                    FontAttributes="Bold"
                    TextColor="Black"
                    Clicked="btnBuscarNuevDes_Clicked"
                Margin="8,0">
            </Button>
            <BoxView Margin="8,0,8,8" HeightRequest="1" BackgroundColor="DarkBlue"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>